@model PersonModel


<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("_navbarAdmin") 
    </div>
    <div class="col-10">
        <div class="row">
            <div class="col-md-8">
                <form asp-controller="Admin" asp-action ="EditPerson" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="PersonID" value="@Model.PersonID"> 
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="PersonFullName" class="col-form-label">Ad Soyad :</label>
                        </div>
                        <div class="col-auto">
                            <input class="form-control" asp-for="PersonFullName">
                            <span asp-validation-for = "PersonFullName" class="text-danger"></span>
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="PersonUniversity" class="col-form-label">Üniversite :</label>
                        </div>
                        <div class="col-auto">
                            <input class="form-control" asp-for="PersonUniversity">
                            <span asp-validation-for = "PersonUniversity" class="text-danger"></span>
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="PersonUniversityDepartmant" class="col-form-label">Üniversite Bölümü :</label>
                        </div>
                        <div class="col-auto">
                            <input class="form-control" asp-for="PersonUniversityDepartmant">
                            <span asp-validation-for = "PersonUniversityDepartmant" class="text-danger"></span>
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="PersonJob" class="col-form-label">Görevi :</label>
                        </div>
                        <div class="col-auto">
                            <input class="form-control" asp-for="PersonJob">
                            <span asp-validation-for = "PersonJob" class="text-danger"></span>
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="PersonPhoto" class="col-form-label">Fotoğraf :</label>
                        </div>
                        <div class="col-auto">
                            <input type="hidden" asp-for="PersonPhoto">
                            <img src="~/img/@Model.PersonPhoto" width="80">
                            <input type="file"name="file" >
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
