@model RegisterModel


<div class="row">
        <div class="col-2">
            @await Html.PartialAsync("_navbarAdmin") 
        </div>
        <div class="col-10">
            <div class="row">
                <div class="col-md-8">
                    <form asp-controller="Account" asp-action ="Register" method="POST"> 
                        <div class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label asp-for="UserName" class="col-form-label">Kullanıcı Adı :</label>
                            </div>
                            <div class="col-auto">
                                <input type="text"  class="form-control" asp-for="UserName">
                                <span asp-validation-for = "UserName" class="text-danger"></span>
                            </div>
                            <div class="col-auto">
                            </div>
                        </div>
                        <div class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label asp-for="Password" class="col-form-label">Şifre :</label>
                            </div>
                            <div class="col-auto">
                                <input type="text"  class="form-control" asp-for="Password">
                                <span asp-validation-for = "Password" class="text-danger"></span>
                            </div>
                            <div class="col-auto">
                            </div>
                        </div>
                        <div class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label asp-for="RePassword" class="col-form-label">Şifre Tekrar :</label>
                            </div>
                            <div class="col-auto">
                                <input type="text"  class="form-control" asp-for="RePassword">
                                <span asp-validation-for = "RePassword" class="text-danger"></span>
                            </div>
                            <div class="col-auto">
                            </div>
                        </div>
                        <div class="row g-3 align-items-center">
                            <div class="col-auto">
                                <label asp-for="Email" class="col-form-label">Mail :</label>
                            </div>
                            <div class="col-auto">
                                <input type="text"  class="form-control" asp-for="Email">
                                <span asp-validation-for = "Email" class="text-danger"></span>
                            </div>
                            <div class="col-auto">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>
