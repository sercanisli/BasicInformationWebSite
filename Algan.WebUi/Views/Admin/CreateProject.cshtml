@model ProjectModel

<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("_navbarAdmin") 
    </div>
    <div class="col-10">
        <div class="row">
            <div class="col-md-8">
                <form asp-controller="Admin" asp-action ="CreateProject" method="POST" enctype="multipart/form-data">
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="ProjectName" class="col-form-label">Proje Adı :</label>
                        </div>
                        <div class="col-auto">
                            <input type="text"  class="form-control" asp-for="ProjectName">
                            <span asp-validation-for = "ProjectName" class="text-danger"></span>
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="ProjectDescription" class="col-form-label">Proje Açıklaması :</label>
                        </div>
                        <div class="col-auto">
                            <textarea id="editor" type="text"  class="form-control" asp-for="ProjectDescription"></textarea>
                            <span asp-validation-for = "ProjectDescription" class="text-danger"></span>
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="ProjectPhoto" class="col-form-label">Proje Fotoğraf :</label>
                        </div>
                        <div class="col-auto">
                            <input type="hidden" asp-for="ProjectPhoto">
                            <input type="file"name="file" >
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-12 text-center">
                            <div class="alert alert-danger">
                                Youtube Linkinin = dirden sonraki kısmını kopyalayıp yapıştırınız. 
                            </div>
                        </div>
                    </div>


                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="ProjectYoutubeUrl" class="col-form-label">Proje Youtube Link :</label>
                        </div>
                        <div class="col-auto">
                            <input type="text"  class="form-control" asp-for="ProjectYoutubeUrl">
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script src="/modules/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor');
    </script>
}