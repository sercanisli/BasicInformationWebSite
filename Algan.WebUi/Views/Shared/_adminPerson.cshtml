@model Person

<div class="container my-5">
    <div class="row justify-content-center align-items-center">
                <div class="col-1">
                    <h5 class="">@Model.PersonID</h5>
                </div>
                <div class="col-11">
                    <div class="row text-center justify-content-center align-items-center">
                        <div class="col-2 img-fluid">
                            <img class="img-fluid" src="~/img/@Model.PersonPhoto" alt="">
                        </div>
                        <div class="col-5">
                            <h5 class="">@Model.PersonFullName</h5>
                            <h5 class="">@Model.PersonJob</h5>
                        </div>
                        <div class="col-5">
                            <h5 class="">@Model.PersonUniversity</h5>
                            <h5 class="">@Model.PersonUniversityDepartmant</h5>
                        </div>
                    </div>
                </div>
    </div>
</div>

    