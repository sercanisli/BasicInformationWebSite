@model Algan.WebUi.Models.ViewModels.PhotoViewModel


<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("_navbarAdmin") 
    </div>
    <div class="col-10">
        <div class="col-12 my-5">
        <button type="button" class="btn btn-dark">
            <a href="/admin/createphoto" class="nav-link" >Fotoğraf Ekle</a>
        </button>
    </div>

    @if(Model.AdminPhoto.Count() == 0)
    {
        @await Html.PartialAsync("_nophoto")
    }
    else
    {
                
            @foreach (var photo in Model.AdminPhoto)
            {    
                <div class="col-12 text-center">
                    @await Html.PartialAsync("_adminPhoto",photo)
                </div>
                <a href="/admin/photos/@photo.PhotoID" class="btn btn-danger btn-sm mr-2">Güncelle</a>

                <form action="/admin/deletephotos" method="POST" style="display: inline;">
                    <input type="hidden" name="PhotoID" value="@photo.PhotoID">
                    <button type="submit" class="btn btn-danger btn-sm" >Sil</button>
                </form>

            }   
    }
    </div>
</div>
