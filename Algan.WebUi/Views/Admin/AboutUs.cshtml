@model Algan.WebUi.Models.ViewModels.AboutUsViewModel


<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("_navbarAdmin") 
    </div>
    <div class="col-10">
        <div class="col-12 my-5">
            <button type="button" class="btn btn-dark">
                <a href="/admin/createaboutus" class="nav-link" >Hakkımızda Ekle</a>
            </button>
        </div>

        @if(Model.AdminAboutUsses.Count() == 0)
        {
            @await Html.PartialAsync("_noaboutus")
        }
        else
        {              
                @foreach (var aboutUs in Model.AdminAboutUsses) 
                {    
                    <div class="col-12">
                        @await Html.PartialAsync("_adminAboutUs",aboutUs)
                    </div>       
                    <a href="/admin/editaboutus/@aboutUs.AboutUsID" class="btn btn-danger btn-sm mr-2">Güncelle</a>
                    
                    <form action="/admin/deleteaboutus" method="POST" style="display: inline;">
                        <input type="hidden" name="AboutUsID" value="@aboutUs.AboutUsID"> 
                        <button type="submit" class="btn btn-danger btn-sm" >Sil</button>
                    </form>
                }   
        }
    </div>
</div>
