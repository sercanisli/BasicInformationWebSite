@model ContactModel


<div class="container">
    <div class="bg-info text-white text-center py-2 my-5">
            <h2>İletişim</h2>
    </div>
    <div class="row align-items-center justify-content-center">
        <div class="col-md-6 col-12" style="width:50%">
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12620.757489068012!2d29.092491!3d37.7387013!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x66d205fe1aca0433!2sPamukkale%20Teknokent!5e0!3m2!1str!2str!4v1631278153154!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
        <div class="col-md-6 col-12 " style="width:50%">
            <form asp-controller="Home" asp-action="Contact" method="POST">
                <div class="card mt-4">
                    <div class="card-body p-3">
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fa fa-user text-info"></i>
                                    </div>
                                </div>
                                <input type="text" class="form-control" asp-for="FullName" placeholder="Ad Soyad">
                                <span asp-validation-for = "FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fa fa-envelope text-info"></i>
                                    </div>
                                </div>
                                <input type="text"  class="form-control" asp-for="Email" placeholder="Mail Adresiniz">
                                <span asp-validation-for = "Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fa fa-tag text-info"></i>
                                    </div>
                                </div>
                                <input type="text"  class="form-control" asp-for="Topic" placeholder="Konu">
                                <span asp-validation-for = "Topic" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fa fa-comment text-info"></i>
                                    </div>
                                </div>
                                <textarea type="text"  class="form-control" asp-for="Message" placeholder="Mesajınızı yazınız" style="height: 200px;"></textarea>
                                <span asp-validation-for = "Message" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="text-center">
                            <input type="submit" value="GÖNDER" class="btn btn-info btn-block">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>