@model SponsorModel

<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("_navbarAdmin") 
    </div>
    <div class="col-10">
        <div class="row">
            <div class="col-md-8">
                <form asp-controller="Admin" asp-action ="CreateSponsor" method="POST" enctype="multipart/form-data">
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="SponsorName" class="col-form-label">Sponsor Adı :</label>
                        </div>
                        <div class="col-auto">
                            <input type="text"  class="form-control" asp-for="SponsorName">
                            <span asp-validation-for = "SponsorName" class="text-danger"></span>
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="SponsorTitle" class="col-form-label">Sponsor Ünvan :</label>
                        </div>
                        <div class="col-auto">
                            <input type="text"  class="form-control" asp-for="SponsorTitle">
                            <span asp-validation-for = "SponsorTitle" class="text-danger"></span>
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="SponsorLogo" class="col-form-label">Sponsor Logo :</label>
                        </div>
                        <div class="col-auto">
                            <input type="hidden" asp-for="SponsorLogo">
                            <input type="file"name="file" >
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    <div class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label asp-for="SponsorUrl" class="col-form-label">Sponsor Link :</label>
                        </div>
                        <div class="col-auto">
                            <input type="text"  class="form-control" asp-for="SponsorUrl">
                        </div>
                        <div class="col-auto">
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
